{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for node backend with user auth",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node dist",
    "dev": "nodemon --watch 'src/**/*.ts'  --exec 'tsc && node index'",
    "test": "tsc && jest ./dist",
    "test:watch": "nodemon --watch 'src' -e js,ts --exec 'tsc && jest ./dist'",
    "test:break": "tsc && node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand ./src",
    "lint": "eslint --ignore-path .gitignore src/**/*.ts",
    "lint:watch": "nodemon --watch 'src' -e js,ts --exec 'eslint --ignore-path .gitignore src/**/*.ts'",
    "lint:fix": "eslint --fix --ignore-path .gitignore src/**/*.ts",
    "lint:watchfix": "nodemon --watch 'src' -e js,ts --exec 'npm run lint:fix'",
    "flow": "nodemon --watch 'src' -e js,ts --exec 'npm run lint:fix && npm run test'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codebru/node-boilerplate.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/codebru/node-boilerplate/issues"
  },
  "homepage": "https://github.com/codebru/node-boilerplate#readme",
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/express-rate-limit": "^5.1.1",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/node-fetch": "^2.5.8",
    "@types/passport": "^1.0.6",
    "@types/passport-local": "^1.0.33",
    "@types/pg-promise": "^5.4.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "typescript": "^4.1.5",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "express-session": "^1.17.1",
    "flash": "^1.1.0",
    "helmet": "^4.4.1",
    "node-fetch": "^2.6.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg-promise": "^10.9.2"
  }
}
